<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carpooling.AppStart">
  <Application.Resources>
    <ResourceDictionary>
      
      <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="TextColor" Value="#00695C" />
        <Setter Property="PlaceholderColor" Value="#004D40"/>
        <Setter Property="HeightRequest" Value="42"/>
      </Style>
      
      <Style x:Key="labelBoldStyle" TargetType="Label">
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="Medium"/>
      </Style>

      <Style x:Key="buttonSuccessStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#4CAF50"/>
        <Setter Property="TextColor" Value="White"/>
      </Style>
      
      <Style x:Key="linkStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="#81D4FA"/>
        <Setter Property="VerticalOptions" Value="Center"/>
      </Style>
    
    </ResourceDictionary>
  </Application.Resources>
</Application>